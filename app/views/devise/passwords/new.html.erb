<div class="mx-auto" style="max-width: 540px;">
  <div class="card w-75 mx-auto">
    <div class="card-body">
      <h2 class="card-title"><%= t('.forgot_your_password') %></h2>

      <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

        <div class="d-grid gap-2">
          <%= f.primary t('.send_me_reset_password_instructions') %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>