<div class="mx-auto" style="max-width: 540px;">
  <div class="card w-75 mx-auto">
    <div class="card-body">
      <h2 class="card-title">
        <%= t('.title', resource: devise_i18n_fix_model_name_case(resource.model_name.human, i18n_key: 'registrations.edit.title')) %>
      </h2>
      <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

        <% help = t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", help: %>


        <% help = t('devise.shared.minimum_password_length', count: @minimum_password_length) if @minimum_password_length %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: t('.leave_blank_if_you_don_t_want_to_change_it'), help: %>

        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>

        <%= f.password_field :current_password, autocomplete: "current-password", placeholder: t('.we_need_your_current_password_to_confirm_your_changes') %>

        <div class="d-grid gap-2">
          <%= f.primary t('.update') %>
        </div>
      <% end %>
    </div>
    <div class="card-footer">
      <h3 class="card-title">
        <%= t('.cancel_my_account') %>
      </h3>
      <p><%= t('.unhappy') %></p>
      <%= button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure'), turbo_confirm: t('.are_you_sure') }, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
</div>