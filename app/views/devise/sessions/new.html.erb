<div class="mx-auto" style="max-width: 540px;">
  <div class="card w-75 mx-auto">
    <div class="card-body">
      <h2 class="card-title"><%= t('.sign_in') %></h2>
      <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: "login-form", data: { turbo: false } }) do |f| %>
        <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email" %>
        <%= f.password_field :password, required: true, autocomplete: "current-password" %>

        <% if devise_mapping.rememberable? %>
          <%= f.form_group :remember_me do %>
            <%= f.check_box :remember_me %>
          <% end %>
        <% end %>

        <div class="d-grid gap-2">
          <%= f.primary t('.sign_in') %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
