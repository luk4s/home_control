<div class="mx-auto" style="max-width: 540px;">
  <div class="card w-75 mx-auto">
    <div class="card-body">
      <h2 class="card-title"><%= t('.resend_unlock_instructions') %></h2>
      <%= bootstrap_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>

        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

        <div class="d-grid gap-2">

          <%= f.primary t('.resend_unlock_instructions') %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
