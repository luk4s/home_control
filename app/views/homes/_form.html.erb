<%= bootstrap_form_for(@home, url: home_path, autocomplete: "off") do |f| %>
  <fieldset>
    <legend><%= t :legend_atrea %></legend>
    <%= f.text_field :atrea_login, autocomplete: "off", required: true %>
    <%= f.password_field :atrea_password, autocomplete: "off", required: true %>
  </fieldset>
  <details>
    <summary>InfluxDB connection</summary>
    <%= f.url_field :influxdb_url %>
    <%= f.text_field :influxdb_token %>
    <%= f.text_field :influxdb_org %>
    <%= f.text_field :influxdb_bucket %>
  </details>

  <div class="d-grid gap-2">
    <%= f.primary %>
  </div>
<% end %>
